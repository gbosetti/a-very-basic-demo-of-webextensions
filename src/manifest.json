{
	"manifest_version": 2,
	"name": "Demo",
	"version": "1.0",
	
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [
			"node_modules/webextension-polyfill/dist/browser-polyfill.js",
			"content_scripts/main.js"
		]
	}],

	"browser_action": {
		"default_icon": {
			"64": "resources/logo-64.png"
		},
		"default_title": "Demo"
	},

	"background": {
		"scripts": [
			"node_modules/webextension-polyfill/dist/browser-polyfill.js",
			"background_scripts/main.js"
		]
	}
}
